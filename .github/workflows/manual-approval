name: test-approval

on:
  push:
    branches:
      - main
  workflow_dispatch:
    inputs:
      manual_approval:
        description: "check the 'âœ“' to deploy"
        required: true
        type: boolean
      passphrase:
        description: "enter passphrase for deployments"
        required: true
        type: string 

jobs:
  manual-approval:
    runs-on: ubuntu-latest
    if: ${{ github.event.inputs.manual_approval == true && github.event.inputs.passphrase == 'Gudditi' }}
    steps:
      - run: echo "This is manual approval"
